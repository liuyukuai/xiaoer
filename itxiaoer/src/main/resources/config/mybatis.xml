<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
    <!-- 给实体Bean一个别名 -->
    <typeAlias alias="MapContainer" type="com.itxiaoer.core.plugin.MapContainer" />
    <typeAlias alias="PageModel" type="com.itxiaoer.core.plugin.PageModel" />
    
    <typeAlias alias="User" type="com.itxiaoer.core.dal.entity.User" />
    <typeAlias alias="Category" type="com.itxiaoer.core.dal.entity.Category" />
